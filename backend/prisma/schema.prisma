generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "mysql"
  url      = env("DB_CONNECTION_STRING")
}

model User {
  id         Int      @id @unique @default(autoincrement())
  password   String   @default("0")
  email      String   @unique
  name       String
  telephone  String?
  role       UserRole @default(USER)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  travels    Travel[]
}

model Travel {
  id        String   @id @unique @default(uuid())
  user_id   Int
  driver_id Int
  distance  Float
  origin    Json
  destiny   Json
  cost      Float
  duration  Float
  status    Statuses @default(CREATED)
  driver    Driver   @relation(fields: [driver_id], references: [id])
  user      User     @relation(fields: [user_id], references: [id])

  @@index([driver_id], map: "Travel_driver_id_fkey")
  @@index([user_id], map: "Travel_user_id_fkey")
}

model Driver {
  id           Int      @id @unique @default(autoincrement())
  name         String
  email        String?  @unique
  description  String
  car          String
  tax          Float
  min_distance Float
  rating       Json?
  travels      Travel[]
}

enum UserRole {
  VIEWER
  USER
  DRIVER
  ADMIN
}

enum Statuses {
  CREATED
  IN_PROGRESS
  FINISHED
  CANCELED
}
